<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
        <ImageView 
            android:id="@+id/iv_top"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:background="@drawable/home_img1"
            />
        <ImageView 
            android:id="@+id/iv_cercle"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_launcher"
            android:layout_marginTop="125dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    <TextView 
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今夜有你不孤单"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@id/iv_top"
        />
    <LinearLayout 
        android:id="@+id/ll_address"
        android:layout_below="@id/tv_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_address"
            />
        <TextView 
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="朝阳区三里屯"
        android:textSize="16sp"
        android:textColor="#aa000000"
        />
    </LinearLayout>
    
      <LinearLayout 
        android:id="@+id/ll_date"
        android:layout_below="@id/ll_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_time"
            />
        <TextView 
        android:id="@+id/tv_date"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015-09-24 周日 18:00"
        android:textSize="16sp"
        android:textColor="#aa000000"
        />
        
    </LinearLayout>
    
      <View 
          android:id="@+id/v_roll_line"
          android:layout_marginTop="10dp"
          android:layout_below="@id/ll_date"
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#90909090"
          />
	<LinearLayout 
	    android:id="@+id/ll_three_icon"
	    android:layout_below="@id/v_roll_line"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content" 
	    android:orientation="horizontal"    
	    >
       <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_scan"
            />
        <TextView 
        android:id="@+id/tv_look_number"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1500"
        android:textSize="16sp"
        android:textColor="#000000"
        />
    </LinearLayout>
    
     <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#90909090" />
        <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_apply"
            />
        <TextView 
        android:id="@+id/tv_comment_number"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150"
        android:textSize="16sp"
        android:textColor="#000000"
        />
    </LinearLayout>
       <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#90909090" />
              <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_like"
            />
        <TextView 
        android:id="@+id/tv_like_number"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1300"
        android:textSize="16sp"
        android:textColor="#000000"
        />
    </LinearLayout>
     </LinearLayout>

	<TextView
	    android:id="@+id/tv_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/iv_cercle"
	    android:layout_alignTop="@+id/ll_address"
	    android:text="林志玲"
	    android:textSize="16sp"
	     />
     
</RelativeLayout>
